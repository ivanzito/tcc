		<class>edu.fatec.zl.entity.Login</class>
		<class>edu.fatec.zl.entity.Funcionario</class>
		<class>edu.fatec.zl.entity.Setor</class>
		<class>edu.fatec.zl.entity.Ativo</class>
		<properties>
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/tcc?autoReconnect=true"/>
			<property name="javax.persistence.jdbc.user" value="root"/>
			<property name="javax.persistence.jdbc.password" value="caiman"/>
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
			<property name="eclipselink.jdbc.autoReconnect" value="true" />
			<property name="eclipselink.logging.level" value="FINER"/>
			
			
			
			
			<!-- 
			<property name="eclipselink.ddl-generation" value="drop-and-create-tables" />
